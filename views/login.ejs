<!doctype html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div class="w-full h-screen bg-zinc-900 p-10">
            <h3 class="text-white text-3xl mb-6">Login your acoount</h3>
            <form action="/login" method="post">
                <input class="px-3 py-2 rounded outline-none bg-transparent border-2 border-zinc-800" type="password" name="password" placeholder="Enter your password">
                <input class="px-3 py-2 rounded outline-none bg-transparent border-2 text-white" type="email" name="email" placeholder="Enter your email">
                <input class="px-3 py-2 rounded bg-blue-500" type="submit" value="Login">
            </form>
        </div>
    </body>
</html>